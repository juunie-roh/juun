{
  "name": "juun",
  "version": "0.0.2",
  "packageManager": "pnpm@10.24.0",
  "private": true,
  "author": "juun",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:docker": "docker build --secret id=env,src=.env -t juun .",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "pnpm --filter @juun/web exec playwright test",
    "lint-staged": "lint-staged",
    "check-types": "turbo check-types",
    "web": "pnpm --filter @juun/web",
    "api": "pnpm --filter @juun/api",
    "ui": "pnpm --filter @juun/ui",
    "db": "pnpm --filter @juun/db"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@commitlint/format": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@config/eslint": "workspace:^",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.15",
    "commitizen": "^4.3.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "inquirer": "~9.3.8",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "storybook": "^10.1.4",
    "turbo": "^2.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "pnpm": {
    "overrides": {
      "tmp": "^0.2.4",
      "js-yaml": "^4.1.1"
    }
  }
}
