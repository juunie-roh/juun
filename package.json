{
  "name": "juun",
  "version": "0.0.2",
  "packageManager": "pnpm@10.29.2",
  "private": true,
  "author": "juun",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:docker": "docker build --secret id=env,src=.env -t juun .",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "pnpm --filter @juun/web exec playwright test",
    "lint-staged": "lint-staged",
    "check-types": "turbo check-types",
    "web": "pnpm --filter @juun/web",
    "api": "pnpm --filter @juun/api",
    "db": "pnpm --filter @juun/db"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/cz-commitlint": "^20.4.1",
    "@commitlint/format": "^20.4.0",
    "@commitlint/types": "^20.4.0",
    "@config/eslint": "workspace:^",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "commitizen": "^4.3.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "pnpm": {
    "overrides": {
      "tmp": ">=0.2.4",
      "js-yaml": ">=4.1.1",
      "hono": ">=4.11.4",
      "diff": ">=8.0.3",
      "lodash": ">=4.17.23"
    }
  }
}
