{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@config/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./next-env.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    ".next/types/**/*.ts",
    "./.storybook/**/*",
  ],
  "exclude": ["node_modules", "out", "coverage", "public"]
}
