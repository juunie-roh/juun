{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@juun/config/tsconfig/nextjs",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": { "@/*": ["./src/*"] }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*.ts"
  ],
  "exclude": ["node_modules", "out"]
}
