{
  "extends": "@config/typescript/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "paths": { "@/*": ["./src/*"] },
  },
  "include": ["src/**/*", "prisma.config.ts", "tsup.config.ts"],
  "exclude": ["node_modules", "dist", "src/generated/**/*"]
}
