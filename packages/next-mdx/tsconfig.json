{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@config/typescript/react-library.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": { "@/*": ["./src/*"] }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}