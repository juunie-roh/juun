{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@config/typescript/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": { "@/*": ["./src/*"] },
    "noUncheckedIndexedAccess": true,
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "coverage"]
}
